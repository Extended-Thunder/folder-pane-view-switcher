{
    "name": "__MSG_appName__",
    "version": "5.1.2",
    "description": "__MSG_appDesc__",
    "author": "Jonathan Kamens, Klaus Buecher",
    "default_locale": "en-US",
    "homepage_url": "https://addons.thunderbird.net/thunderbird/addon/folder-pane-view-switcher/",
    "applications": {
        "gecko": {
            "id": "FolderPaneSwitcher@kamens.us",
            "strict_min_version": "91.0",
            "strict_max_version": "102.*"
        }
    },
    "background": {
        "scripts": ["fp-background.js"]
    },

    "permissions": [
        "storage",
        "accountsRead",
        "accountsFolders",
        "messagesRead"
    ],

    "options_ui": {
        "page": "./content/options.html",
        "open_in_tab": true,
        "browser_style": true
    },

    "icons": {
        "48": "icon.png"
    },
    "manifest_version": 2,
    "experiment_apis": {
        "FPVS": {
            "schema": "chrome/content/api/FPVS/schema.json",
            "parent": {
                "scopes": ["addon_parent"],
                "paths": [["FPVS"]],
                "script": "chrome/content/api/FPVS/implementation.js"
            }
        },
        "LegacyMenu": {
            "schema": "chrome/content/api/LegacyMenu/schema.json",
            "parent": {
                "scopes": ["addon_parent"],
                "paths": [["LegacyMenu"]],
                "script": "chrome/content/api/LegacyMenu/implementation.js"
            }
        }
    }
}
